#include <stdio.h>

int main()
{
    int n,i,flag;
    printf("Enter a number :");
    scanf("%d",&n);
    i=2;
    while(i<n)
{
        if(n%i==0)
        {
            flag++;
        }
        i++;
}
 if(flag==0)
 {
     printf("%d is a prime number",n);
 }
 else{
      printf("%d  is not a prime number",n);
     }
    
    return 0;
}
