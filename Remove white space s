#include <stdio.h>
#include <string.h>
int main()
{
    char ch='-',s[30];
    printf("Enter a long sentence :");
    scanf("%[^\n]",s);
    int i=0;
    while(i < strlen(s)){
        if(s[i] == ' '){
            s[i] = ch;
        }
         i++;
    }
   
    
    printf("After removing white space the string is :%s\n",s);

    return 0;
}
