#include <stdio.h>

int main() {
    int array[25], i, n,sum;
    float avg;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter the elements [%d]: ", n);
    for (i = 0; i < n; i++)
        scanf("%d", &array[i]);

    printf("Array elements:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", array[i]);
        sum += array[i];
    }
    
    printf("\nsum = %d", sum);
    
    avg = sum / n;
 
    printf("\nAverage = %f", avg);


    return 0;
}
